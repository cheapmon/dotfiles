#!/usr/bin/env bash

git --git-dir="$HOME/git/dotfiles" --work-tree="$HOME" pull --all

case $? in
  0)
    MESSAGE="$(git --git-dir="$HOME/git/dotfiles" --work-tree="$HOME" log -1 --pretty=%B)"
    URGENCY="normal"
    ;;
  *)
    MESSAGE="something went wrong"
    URGENCY="critical"
    ;;
esac

notify-send -a dotfiles -u "$URGENCY" "$MESSAGE"
