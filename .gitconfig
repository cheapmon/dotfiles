# .:.
# gitconfig

[user]
  email = simon.kaleschke.leipzig@gmail.com
  name = Simon Kaleschke
[alias]
  ap = add --patch
  co = checkout
  cf = !git checkout `git branch | sed s/$(git remote)// | cut -d'/' -f2 | fzf-tmux`
  cl = clean -fd
  cr = !git checkout `git branch -r | sed s/$(git remote)// | cut -d'/' -f2 | fzf-tmux`
  br = branch
  bd = !git branch -D `git branch | fzf-tmux -m`
  cm = commit
  st = status
  pl = pull
  ps = push
  lg = log -p
  df = diff
  dfc = diff --cached
  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rl = reset --soft HEAD~1
  rs = restore --staged
  main = checkout main
[color]
  ui = true
[commit]
  verbose = true
[push]
  autoSetupRemote = true
[pull]
  rebase = true
[init]
  defaultBranch = main
[rebase]
  autoStash = true
[diff]
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
