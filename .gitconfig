[user]
email = simon.kaleschke.leipzig@gmail.com
name = Simon Kaleschke
	signingkey = /home/seims/.ssh/id_ed25519.pub

[alias]
ap = add --patch
co = checkout
cf = !git checkout `git branch | sed s/$(git remote)// | cut -d'/' -f2 | fzf-tmux`
cl = clean -fd
cr = !git checkout `git branch -r | sed s/$(git remote)// | cut -d'/' -f2 | fzf-tmux`
br = branch
bd = !git branch -D `git branch | fzf-tmux -m`
cm = commit
st = status
pl = pull
ps = push
lg = log --graph --decorate --oneline
lp = log -p
df = diff
dfc = diff --cached
rb = rebase
rbc = rebase --continue
rba = rebase --abort
rl = reset --soft HEAD~1
rs = restore --staged
main = checkout main
gr = "!f() { git grep \"$1\" $(git rev-list --all); }; f"

[color]
ui = true

[commit]
verbose = true
	gpgsign = true

[push]
autoSetupRemote = true
followTags = true
default = simple

[pull]
rebase = true

[init]
defaultBranch = main

[rebase]
autoStash = true
autoSquash = true
updateRefs = true

[diff]
tool = difftastic
algorithm = histogram
colorMoved = plain
mnemonicPrefix = true
renames = true

[difftool]
prompt = false

[difftool "difftastic"]
cmd = difft "$LOCAL" "$REMOTE"

[pager]
difftool = true

[core]
excludesfile = ~/.gitexclude
fsmonitor = true
untrackedCache = true
	pager = delta

[help]
autocorrect = prompt

[column]
ui = auto

[branch]
sort = -committerdate

[tag]
sort = version:refname
	gpgsign = true

[fetch]
prune = true
pruneTags = true
all = true

[rerere]
enabled = true
autoupdate = true

[merge]
	conflictStyle = zdiff3
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = /home/seims/.config/git/allowed_signers
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
