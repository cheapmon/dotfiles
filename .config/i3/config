# .:.
# i3 config

## Variables

### Mod key
set $mod Mod4

### Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

### Outputs
set_from_resource $main i3wm.monitor ""
set_from_resource $left i3wm.monitor_left ""
set_from_resource $right i3wm.monitor_right ""
set_from_resource $touchpad i3wm.touchpad ""

## System keybindings

### Floating modifier
floating_modifier $mod

### Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

### Move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

### Kill window
bindsym $mod+q kill

### Orientation
bindsym $mod+h split h
bindsym $mod+v split v

### Modes
bindsym $mod+f fullscreen toggle
bindsym $mod+t floating toggle
bindsym $mod+w sticky toggle

### Switch workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

### Move focused
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

### Move between outputs
bindsym $mod+KP_Right move workspace to output $right
bindsym $mod+KP_Left move workspace to output $left

### Scratchpad
bindsym $mod+Prior move scratchpad
bindsym $mod+Next scratchpad show

### Additional navigation
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Layouts
bindsym $mod+comma layout stacking
bindsym $mod+period layout tabbed
bindsym $mod+slash layout toggle split

## Look and Feel

### System font
font pango:JetBrains Mono 9
title_align center

### Assign monitors
workspace $ws1 output $main $left
workspace $ws2 output $main $left
workspace $ws3 output $main $left
workspace $ws4 output $main $left
workspace $ws5 output $main $left
workspace $ws6 output $main $right
workspace $ws7 output $main $right
workspace $ws8 output $main $right
workspace $ws9 output $main $right
workspace $ws10 output $main $right

### Back and forth
workspace_auto_back_and_forth yes

### Window colors
# class                 border  backgr. text    indicator child_border
client.focused          #ffffff #000000 #ffffff #00aad4   #ffffff
client.focused_inactive #ffffff #5f676a #ffffff #00aad4   #000000
client.unfocused        #000000 #222222 #ffffff #00aad4   #000000
client.urgent           #647a82 #900000 #ffffff #00aad4   #000000
client.placeholder      #000000 #0c0c0c #ffffff #00aad4   #000000

### Gaps
gaps inner 15
smart_gaps yes

### Borders
for_window [class="^.*"] border pixel 2
smart_borders yes

## Program-specific settings

### Floating Windows
for_window [title="win0"] floating enable
for_window [title=".*Emulator.*"] floating enable
for_window [title=".*screen share.*"] floating enable
for_window [title="alacritty"] floating enable

### Assign windows
assign [class="code"] $ws3
assign [class="jetbrains-idea"] $ws3
assign [class="jetbrains-studio"] $ws3
assign [class="jetbrains-clion"] $ws3
assign [class="TeXstudio"] $ws3
assign [class="jetbrains-rubymine"] $ws3
assign [class="jetbrains-webstorm"] $ws3
assign [class="firefoxdeveloperedition"] $ws6
assign [class="Thunderbird"] $ws7
assign [class="Slack"] $ws8
assign [class="discord"] $ws8
assign [class="Element"] $ws9
assign [title=".*Emulator.*"] $ws4
for_window [class="Spotify"] move to workspace $ws10

## Custom keybindings

### Baseline
bindsym $mod+Return exec alacritty
bindsym $mod+d exec rofi -show run

### Control
bindsym $mod+s exec systemctl poweroff
bindsym $mod+a exec systemctl reboot
bindsym $mod+e exec i3-msg exit
bindsym $mod+r restart

### Backlight
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5

### Audio
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioMicMute exec amixer set Capture toggle
bindsym XF86AudioPlay exec spotifycli --playpause
bindsym XF86AudioPrev exec spotifycli --prev
bindsym XF86AudioNext exec spotifycli --next

### Programs
bindsym $mod+Ctrl+l exec /home/seims/.config/seims/scripts/lock.sh
bindsym $mod+Ctrl+s exec screens
bindsym $mod+Ctrl+k exec layouts
bindsym $mod+Ctrl+w exec rofi -show window
bindsym $mod+Ctrl+n exec dunstctl set-paused toggle
bindsym $mod+Ctrl+p exec /home/seims/.config/seims/scripts/polybar.sh
bindsym $mod+Ctrl+z exec rofi-pass --root /home/seims/git/passwords
bindsym $mod+Ctrl+Return exec alacritty --title alacritty
bindsym $mod+Ctrl+Home exec flameshot gui
bindsym $mod+Ctrl+Insert exec CM_LAUNCHER=rofi clipmenu

### The Key
bindsym XF86Tools exec /home/seims/.config/seims/scripts/stackoverflow.sh
bindsym XF86Launch5 exec core-panic
bindsym XF86Launch6 exec polybar-msg cmd toggle

### Preparations
exec /home/seims/.config/seims/scripts/dotfiles.sh
exec_always i3-layouts
exec xinput set-prop "$touchpad" "libinput Tapping Enabled" 1
exec xinput set-prop "$touchpad" "libinput Natural Scrolling Enabled" 1
exec /home/seims/.config/seims/scripts/polybar.sh
exec_always zsh .fehbg
exec picom -b
exec redshift
exec nm-applet
exec blueman-applet
exec gnome-keyring-daemon --start --components=secrets
exec unclutter
exec clipmenud

### Autostart
exec /home/seims/.config/seims/scripts/autostart.sh
